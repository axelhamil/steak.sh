{
  "extends": "@packages/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@data-access/*": ["./app/_data-access/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.mjs",
    ".next/types/**/*.ts",
    "../../packages/libs/**/*",
    "../../packages/ui/**/*"
  ],
  "exclude": ["node_modules"]
}
